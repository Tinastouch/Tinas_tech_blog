 <div class="container-fluid">
  {{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}
  </div>

  {{#if loggedIn}}
  {{> create-post }}
  <script src="/javascript/logout.js"></script>
  {{/if}}