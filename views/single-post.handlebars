{{!-- {{> post-data post }} --}}
<div class="col-9">
    <article class="card">
        <div class="title allPost">
            <h3>{{post.title}}</h3>
        </div>
        <div class="">
            <em>Posted by {{post.user.username}} on {{format_date post.created_at}}</em>
        </div>
        <div class="body">
            {{post.body}}
        </div>
    </article>

    {{!-- add comment --}}
    {{#if loggedIn}}
        <form class="card" id="comment-form">
            <div class="">
                <textarea class="form-control" rows="3" name="comment-body" id="post-text" placeholder="Add Comment"></textarea>
            </div>

            <div>
                <button type="submit" class="btn btn-success">Add Comment</button>
            </div>
        </form>
    {{/if}}

    {{> comments post.comments}}

</div>
{{#if loggedIn}}
    <script src="/javascript/comment.js"></script>
{{/if}}